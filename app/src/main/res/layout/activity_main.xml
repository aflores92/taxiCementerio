<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andresflores.taxicementerio.MainActivity"
    android:background="@android:color/background_light">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TaxistaOPasajeroSwitch"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <TextView

        android:background="@color/wallet_dim_foreground_holo_dark"
        android:text="Taxista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TaxistaOPasajeroSwitch"
        android:layout_toEndOf="@+id/TaxistaOPasajeroSwitch"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:layout_alignTop="@+id/TaxistaOPasajeroSwitch"
        android:textStyle="normal|bold" />


    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/button2" />

    <TextView
        android:text="Pasajero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="normal|bold"
        android:layout_marginRight="16dp"
        tools:text="Pasajero"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/button2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="13dp"
        android:id="@+id/imageView"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cast_expanded_controller_bg_gradient_light" />


</RelativeLayout>