<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andresflores.taxicementerio.Main2Activity"
    android:animationCache="true"
    android:background="@drawable/fondo">


    <EditText
        android:id="@+id/etxt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Ingrese Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etxt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_name"
        android:layout_centerHorizontal="true"
        android:hint="Ingrese Correo"
        android:inputType="textEmailAddress" />

    <Button
        android:text="Seleccione Aqui Para Ingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Registrar"
        android:layout_below="@+id/etxt_password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese ContraseÃ±a "
        android:inputType="textPassword"
        android:layout_below="@+id/etxt_email"
        android:layout_alignParentStart="true" />


</RelativeLayout>
